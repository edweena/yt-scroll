.frame(du-scroll-container, class="desktop")
	
	div(class="hero")
		.hero-img-wrap
			img(ng-src="{{fields.heroImage.fields.file.url}}")
		
		
	.video-wrapper
		div(class="video")
			youtube-video(id="main-vid", video-id="video", player-vars="playerVars")


	.text-wrapper
			
		.title-text
			h1(class="top") {{fields.title}}
			h2 {{fields.subTitle}}
			a(class="arrow-nav", href="#intro", offset="30", du-smooth-scroll)
				span(class="arrow fa fa-angle-double-down")
			



		.text
			div(id="intro", ng-bind-html="trust(fields.introText)")
			

			div(class="topic", 
				ng-repeat-start="item in fields.youTubeListItems", 
				data-chapter="{{item.fields.order}}", 
				data-id="{{item.fields.youTubeVideoId}}",
				data-time="{{item.fields.startTime}}",
				ng-if="$first", wrap)

				div(lazy, class="lazyYT", videoid="{{item.fields.youTubeVideoId}}", data-ratio="16:9") loading...
				
				h1(fade-video) {{item.fields.order}}
				
				h2 {{item.fields.title}}
				
				div(class="bodyText", ng-bind-html="trust(item.fields.bodyText)")

			

			div(class="topic", 
				ng-repeat-end="item in fields.youTubeListItems", 
				data-chapter="{{item.fields.order}}", 
				data-id="{{item.fields.youTubeVideoId}}",
				data-time="{{item.fields.startTime}}",
				ng-if="!$first", wrap)

				a(class="arrow-nav", href="#{{item.fields.youTubeVideoId}}", du-smooth-scroll, offset="30")
					span(class="arrow fa fa-angle-double-down")
				
				div(lazy, class="lazyYT", videoid="{{item.fields.youTubeVideoId}}", data-ratio="16:9") loading...

				h1(id="{{item.fields.youTubeVideoId}}") {{item.fields.order}}
				
				h2 {{item.fields.title}}
				
				div(class="bodyText", ng-bind-html="trust(item.fields.bodyText)")




